    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/mcp/health",
          "host": ["{{base_url}}"],
          "path": ["mcp", "health"]
        },
        "description": "Checks if the MCP Weather service is running and healthy."
      },
      "response": []
    },
    {
      "name": "Get Weather Info",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/mcp/weather?city={{city}}",
          "host": ["{{base_url}}"],
          "path": ["mcp", "weather"],
          "query": [
            {
              "key": "city",
              "value": "{{city}}",
              "description": "City name for which to fetch weather info."
            }
          ]
        },
        "description": "Queries the LLM service to get weather information for the given city."
      },
      "response": [
        {
          "name": "Example Success",
          "originalRequest": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/mcp/weather?city=Tokyo",
              "host": ["{{base_url}}"],
              "path": ["mcp", "weather"],
              "query": [{ "key": "city", "value": "Tokyo" }]
            }
          },
          "status": "OK",
          "code": 200,
          "_postman_previewlanguage": "json",
          "header": [{ "key": "Content-Type", "value": "application/json" }],
          "body": "{\n  \"city\": \"Tokyo\",\n  \"source\": \"LLMService\",\n  \"data\": \"The weather in Tokyo is currently 25Â°C and mostly clear.\",\n  \"timestamp\": 1728154310248\n}"
        },
        {
          "name": "Example Error",
          "originalRequest": {
